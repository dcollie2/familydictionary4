<%= form_with(model: word, data: { turbo: false }) do |form| %>
  <% if word.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(word.errors.count, "error") %> prohibited this word from being saved:</h2>

      <ul>
        <% word.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">

      <div class="form-group mb-3">
        <%= form.label :prefix, class: 'form-label' %>
        <%= form.text_field :prefix, class: 'form-control' %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :word, class: 'form-label' %>
        <%= form.text_field :word, class: 'form-control', rows: 3 %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :definition, class: 'form-label' %>
        <%= form.text_area :definition, class: 'form-control' %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :phonetic, class: 'form-label' %>
        <%= form.text_field :phonetic, class: 'form-control' %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :syllables, class: 'form-label' %>
        <%= form.text_field :syllables, class: 'form-control' %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :audio, class: 'form-label' %>
        <%= form.file_field :audio, class: 'form-control' %>
      </div>
      <div class="form-group mb-3">
        <%= form.label :slug, class: 'form-label' %>
        <%= form.text_field :slug, class: 'form-control' %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :also_matches, class: 'form-label' %>
        <%= form.text_field :also_matches, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= form.submit 'Update Word', class: 'btn btn-primary' %>
<!--        <%#= link_to 'Show', @word, class: '' %> |-->
        <%= link_to 'Back', words_path, class: 'btn btn-secondary' if @word.new_record? %>
        <%= link_to 'Back', word_path(@word), class: 'btn btn-secondary' unless @word.new_record? %>
      </div>

    </div>
  </div>
<% end %>
